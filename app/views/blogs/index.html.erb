<h2>
  <% if @blog_count > 0 %>
    Found <%= @blog_count %> results
  <% else %>
    No results. Please search using relevant tag(s) 
  <% end %>
</h2>
<% if @blog_count > 0 %>
  <table id="blogs-table">
  	<thead>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Details</th>
      </tr> 
    </thead>
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.author %></td>
          <td><%= link_to blog.title, blog_path(blog.id) %></td>
          <td><%= blog.details %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>